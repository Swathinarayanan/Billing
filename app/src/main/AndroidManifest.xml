<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nsit.vivek.com.billing">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SetCycle"
            android:label="@string/title_activity_page_one"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nsit.vivek.com.billing.MainActivity" />
        </activity>
        <activity
            android:name=".Calculate"
            android:label="@string/title_activity_page_two"
            android:parentActivityName=".SetCycle"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SetCycle" />
        </activity>
        <activity
            android:name=".NewPage"
            android:label="@string/title_activity_page1"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nsit.vivek.com.billing.MainActivity" />
        </activity>
        <activity
            android:name=".ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Estimated"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EstimatedNew"
            android:label="@string/title_activity_estimated_new"
            android:parentActivityName=".SetCycle"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nsit.vivek.com.billing.SetCycle" />
        </activity>
        <activity
            android:name=".ScrollingActivityEstimated"
            android:label="@string/title_activity_scrolling_activity_estimated"
            android:parentActivityName=".SetCycle"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nsit.vivek.com.billing.SetCycle" />
        </activity>
    </application>

</manifest>
